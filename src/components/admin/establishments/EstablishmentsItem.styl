adminCardHeigth = 64px;
buttonAlignment = 16px;
greenGradient = linear-gradient(-45deg, rgba(0,141,131,1) 0%, rgba(81,255,143,1) 100%);
redGradient = linear-gradient(145deg, #ed213a, #93291e);
blueGradient = linear-gradient(145deg, #4b6cb7, #182848);
shadow = 3px 3px 8px rgba(136,136,136,0.267);

.card--admin .row
    margin 0
    height 100%
    align-content center
    text-align left
    height adminCardHeigth
    & .col-sm-1, .col-sm-8
        height adminCardHeigth
    & .col-sm-7
        padding-left 28px
        display flex
        align-content center
        & h2
            align-self center
.card--admin
    margin 12.5px 0
    height adminCardHeigth
.card--admin
    &__image
        border-radius 8px 0 0 8px
    & .button
        &__card
            &--delete
                background redGradient
                cursor pointer
                &:hover img
                    padding 4px
                    transition 0.15s
            &--edit
                background blueGradient
                cursor pointer
                &:hover img
                    padding 2px
                    transition 0.15s
            &--goto
                background greenGradient
                border-radius 0 8px 8px 0
                cursor pointer
                &:hover img
                    padding 2px
                    transition 0.15s
    & .col-sm-1  
        display flex
        justify-content center          
        & img
            height 36px
            padding 8px
            display block
            margin-top buttonAlignment
            transition 0.15s
            
select#selfCatering
    -webkit-appearance none
    opacity 1
    display block
    background-image url('../../../img/gfx/arrow_down_gradient.svg')
    background-repeat no-repeat
    background-position right 10px top 3px
    background-size 28px
    cursor pointer
    
.form__img--add
    width 100%
    display block
    transition 0.2s
    &-container
        height 120px
        display block
        cursor pointer
        padding 4px
        & div
            background greenGradient
            width 56px
            height 56px
            margin 8px auto 8px auto
            transition 0.2s
            border-radius 100%
            display block
        &:hover div
            margin-top 2px
            margin-bottom 2px
            padding 0px
            height 68px
            width 68px
        &:hover img
            transform rotate(90deg)
            